.widget.panel.panel-default
  .panel-heading
    %h3.panel-title.widget-title= widget[:name]
    %select.form-control.widget-page-selector
      - Widget.last_page.times do |i|
        %option{value: i+1} #{i+1}
  .panel-body
    .chart{ :id => "chart-#{widget[:id]}" }

      Panel content
    %ul.actions
      %li.action
        = link_to "Edit", edit_widget_path(widget), class: "btn btn-default save"
      %li.action

