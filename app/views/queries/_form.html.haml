= form_for(@query) do |f|
  - if @query.errors.any?
    #error_explanation
      %h2
        = pluralize(@query.errors.count, "error")
        prohibited this query from being saved:
      %ul
        - @query.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :command
    %br/
    = f.text_area :command
  .actions
    = f.submit
