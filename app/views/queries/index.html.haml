%h1 Listing queries
%table
  %thead
    %tr
      %th Command
      %th{:colspan => "3"}
  %tbody
    - @queries.each do |query|
      %tr
        %td= query.command
        %td= link_to 'Show', query
        %td= link_to 'Edit', edit_query_path(query)
        %td= link_to 'Destroy', query, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Query', new_query_path
