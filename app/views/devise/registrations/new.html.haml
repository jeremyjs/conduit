%h2 Sign up
= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  = devise_error_messages!
  %div
    = f.label :login
    %br/
    = f.text_field :login, :autofocus => true , :id => "sign_up_username"
  %div
    = f.label :password
    %br/
    = f.password_field :password , :id => "sign_up_password"
  %div
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation , :id => "sign_up_confirm"
  %div= f.submit "Sign up" , :id => "Sign Up"
= render "devise/shared/links"
